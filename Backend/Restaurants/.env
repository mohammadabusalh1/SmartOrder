# Server Configuration
PORT=4004
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/smartorder

# JWT Authentication
JWT_SECRET=smart_order_auth_secret_key_change_in_production
JWT_EXPIRY=1h
JWT_REFRESH_SECRET=smart_order_refresh_secret_key_change_in_production
JWT_REFRESH_EXPIRY=7d

# Email Configuration
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=SmartOrder <noreply@smartorder.com>

# Verification Settings
VERIFICATION_TOKEN_EXPIRY=24h # 24 hours
PASSWORD_RESET_EXPIRY=10m # 10 minutes

# Cors Settings
CORS_ORIGIN=http://localhost:3000